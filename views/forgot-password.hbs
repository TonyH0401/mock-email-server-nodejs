<div class="container-fluid w-50 p-3">
    <h3 class="mb-4 pb-2 pb-md-0 mb-md-3 text-center">MyMail Forgot Password</h3>
    <form action="/accounts/forgot-password" method="POST" id="forgotPassword">
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}

        {{#if success}}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
        {{/if}}

        {{#unless success}}
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="emailAddress">Email address</label>
            <input type="email" id="emailAddress" name="emailAddress" class="form-control" required />
        </div>

        <div class="form-outline mb-4">
            <label class="form-label" for="phone">Phone Number</label>
            <input type="text" id="phone" name="phone" class="form-control" required />
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-warning btn-block mb-4" form="forgotPassword">Change Password</button>
        {{/unless}}

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member? <a href="/accounts/register">Register</a></p>
        </div>
        <div class="text-center">
            <p>A member? <a href="/accounts/login">Login</a></p>
        </div>
    </form>
</div>